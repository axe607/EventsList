@model EventsListCommon.Models.User

@{
    ViewBag.Title = "EditOrganizerInfo";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Edit Organizer</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.OrganizerName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OrganizerName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OrganizerName, "", new { @class = "text-danger" })
            </div>
        </div>
        @if (Model.OrganizerEmails != null && Model.OrganizerEmails.Any())
        {
            <div class="form-group">
                @Html.LabelFor(model => model.OrganizerEmails, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @foreach (var email in Model.OrganizerEmails)
                    {
                        <div id="email_@email.Id" class="input-group" role="group" aria-label="...">
                            <span class="input-group-btn"><button name="delBtn_email" type="button" class="btn btn-danger">Del</button></span>
                            <input type="text" class="form-control" value="@email.EmailString" />
                        </div>
                    }
                </div>
            </div>
        }
        @if (Model.OrganizerPhones != null && Model.OrganizerPhones.Any())
        {
            <div class="form-group">
                @Html.LabelFor(model => model.OrganizerPhones, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @foreach (var phone in Model.OrganizerPhones)
                    {
                        <div id="phone_@phone.Id" class="input-group" role="group" aria-label="...">
                            <span class="input-group-btn"><button name="delBtn_phone" type="button" class="btn btn-danger">Del</button></span>
                            <input type="text" class="form-control" value="@phone.PhoneNumber" />
                        </div>

                    }
                </div>
            </div>
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script>
    $("[name='delBtn_email']").click(function () {
        var emailId = $(this).closest("div.input-group").attr("id").split("_").pop();
        $.ajax({
            url: "/Account/DeleteOrganizerEmail",
            data: {
                emailId: emailId
            },
            success: function () {
                $("#email_" + emailId).remove();
            },
            error: function (error) {
                console.log(error.status + " - " + error.statusText);
            }
        });
    });

    $("[name='delBtn_phone']").click(function () {
        var phoneId = $(this).closest("div.input-group").attr("id").split("_").pop();
        $.ajax({
            url: "/Account/DeleteOrganizerPhone",
            data: {
                phoneId: phoneId
            },
            success: function () {
                $("#phone_" + phoneId).remove();
            },
            error: function (error) {
                console.log(error.status + " - " + error.statusText);
            }
        });
    });
</script>